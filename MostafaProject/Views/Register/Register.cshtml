@model MostafaProject.Models.User

@{
    ViewData["Title"] = "ثبت نام";
}

<h1>ثبت نام</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control mt-2" placeholder="نام را وارد کنید"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Family" class="form-control mt-2" placeholder="فامیلی را وارد کنید"/>
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Mobile" class="form-control mt-2" placeholder="موبایل را وارد کنید"/>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PassWrod" class="form-control mt-2" placeholder="رمز عبور را وارد کنید"/>
                <span asp-validation-for="PassWrod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RePassWrod" class="form-control mt-2" placeholder="تکرار رمز عبور را وارد کنید"/>
                <span asp-validation-for="RePassWrod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
